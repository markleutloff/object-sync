{
  "name": "simple-object-sync",
  "version": "1.1.2",
  "type": "module",
  "repository": {
    "url": "https://github.com/markleutloff/object-sync"
  },
  "description": "Tracks changes on objects and notifies clients to keep client and host states in sync.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "private": false,
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "author": "Mark Leutloff",
  "license": "MIT",
  "scripts": {
    "watch": "tsc --watch",
    "build:tsc": "tsc",
    "build:bundle": "node esbuild.config.mjs",
    "build:bundle:dts": "dts-bundle-generator -o dist/index.d.ts src/index.ts",
    "build": "npm run build:tsc && npm run build:bundle && npm run build:bundle:dts",
    "test:ts:prepare": "tsc --project tests/ts/tsconfig.json",
    "test:ts": "tsx --test tests/ts/*.test.ts",
    "test:ts:objectSync": "tsx --test tests/ts/objectSync.test.ts",
    "test:ts:multiClient": "tsx --test tests/ts/multiClient.test.ts",
    "test:ts:worker": "tsx --test tests/ts/worker.test.ts",
    "test:ts:syncableArray": "tsx --test tests/ts/syncableArray.test.ts",
    "test:ts:syncableObservableArray": "tsx --test tests/ts/syncableObservableArray.test.ts",
    "test:bundle": "tsx --test tests/bundle/*.test.ts",
    "test": "npm run test:ts:prepare && npm run test:ts && npm run test:bundle",
    "build-and-test": "npm run build && npm run test"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "dts-bundle-generator": "^9.5.1",
    "esbuild": "^0.25.11",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.0.0",
    "undici-types": "^7.16.0"
  }
}
